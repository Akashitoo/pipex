all: $(NAME)

$(NAME):$(OBJS)
	$(MAKE) --no-print-directory -C ./libft
	echo "=> ğ™‡ğ™„ğ˜½ğ™ğ™ ğ™€ğ™ğ™ ğ˜¾ğ™Šğ™ˆğ™‹ğ™„ğ™‡ğ™€Ì  ğŸ“š"
